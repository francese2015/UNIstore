<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pubblica_layout"
    android:orientation="vertical"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Titolo:"
                android:id="@+id/book_title_detail"
                android:textSize="30dp"
                android:autoText="false"
                android:layout_margin="15dp"
                android:layout_below="@+id/card_view"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="38dp"
                android:layout_alignParentEnd="false"
                android:editable="true"
                android:textColor="#ff000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Autore:"
                android:id="@+id/book_authors_detail"
                android:layout_marginTop="15dp"
                android:textSize="25dp"
                android:autoText="false" android:layout_margin="15dp"
                android:layout_below="@+id/book_title_detail"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ff000000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ISBN:"
                android:id="@+id/book_price_detail"
                android:layout_marginTop="15dp"
                android:layout_margin="15dp"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:autoText="false"
                android:layout_below="@+id/book_authors_detail"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ff000000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Descrizione prodotto:"
                android:id="@+id/book_description_detail"
                android:layout_marginTop="15dp"
                android:layout_margin="15dp"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:autoText="false"
                android:layout_below="@+id/book_price_detail"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ff000000" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:textSize="15dp"
                android:id="@+id/book_description_detail"
                android:text="@string/descrizione_libro"
                android:background="#178a619e"
                android:textColor="@color/secondary_text"
                android:layout_below="@+id/book_description_detail"
                android:layout_alignLeft="@+id/book_description_detail"
                android:layout_alignStart="@+id/book_description_detail"
                android:layout_alignRight="@+id/take_book_photo"
                android:layout_alignEnd="@+id/take_book_photo" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inserisci Immagine"
                android:id="@+id/button2"
                android:background="#4CAF50"
                android:layout_above="@+id/book_authors_detail"
                android:layout_toRightOf="@+id/contact_the_author_button"
                android:layout_toEndOf="@+id/contact_the_author_button" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/take_book_photo"
                android:editable="false"
                android:layout_alignRight="@+id/button2"
                android:layout_alignEnd="@+id/button2"
                android:layout_alignLeft="@+id/button2"
                android:layout_alignStart="@+id/button2"
                android:layout_above="@+id/book_description_detail"
                android:layout_alignTop="@+id/book_authors_detail"
                android:background="#178a619e"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/secondary_text"
                android:text="Small Text"
                android:id="@+id/textView6"
                android:layout_alignTop="@+id/button2"
                android:layout_toRightOf="@+id/book_title_detail"
                android:layout_alignBottom="@+id/book_title_detail"
                android:layout_alignRight="@+id/contact_the_author_button"
                android:layout_alignEnd="@+id/contact_the_author_button"
                android:background="#178a619e"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/secondary_text"
                android:text="Small Text"
                android:id="@+id/textView7"
                android:layout_toRightOf="@+id/book_authors_detail"
                android:layout_alignBottom="@+id/book_authors_detail"
                android:layout_alignRight="@+id/contact_the_author_button"
                android:layout_alignEnd="@+id/contact_the_author_button"
                android:background="#178a619e"
                android:layout_alignTop="@+id/editText2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pubblica"
                android:id="@+id/contact_the_author_button"
                android:background="#4CAF50"
                android:enabled="true"
                android:layout_below="@+id/book_description_detail"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>