<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/alert_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/find_1"
            android:id="@+id/book_authors_detail"
            android:layout_marginTop="47dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/book_price_detail"
            android:layout_marginTop="37dp"
            android:layout_below="@+id/book_authors_detail"
            android:layout_alignLeft="@+id/book_authors_detail"
            android:layout_alignStart="@+id/book_authors_detail" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/find_2"
            android:id="@+id/book_description_detail"
            android:layout_below="@+id/book_price_detail"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:id="@+id/contact_the_author_button"
            android:backgroundTint="#4CAF50"
            android:layout_marginTop="54dp"
            android:layout_below="@+id/editText3"
            android:layout_centerHorizontal="true"
            android:clickable="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/book_description_detail"
            android:text="@string/title"
            android:editable="true"
            android:layout_below="@+id/book_description_detail"
            android:layout_marginTop="37dp"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignStart="@+id/editText2"
            android:layout_alignRight="@+id/editText2"
            android:layout_alignEnd="@+id/editText2"
            android:inputType="textCapCharacters" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/author"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_below="@+id/book_description_detail"
            android:layout_alignLeft="@+id/book_price_detail"
            android:layout_alignStart="@+id/book_price_detail" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_below="@+id/editText2"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignStart="@+id/editText2"
            android:text="@string/isbn" />

    </RelativeLayout>
</LinearLayout>