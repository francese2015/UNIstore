<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_root_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true">
        <!-- A CardView that contains a TextView -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_book_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            card_view:cardCornerRadius="4dp"
            android:layout_margin="5dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/book_info">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bookPhoto"
                    android:layout_gravity="center|left"
                    android:src="@drawable/foto_libro" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/bookPhoto"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentStart="false">

                </LinearLayout>

                <TextView
                    android:id="@+id/book_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="@string/book_title"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/bookPhoto"
                    android:layout_toRightOf="@+id/bookPhoto" />

                <TextView
                    android:id="@+id/book_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="@string/book_author"
                    android:layout_below="@+id/book_title"
                    android:layout_alignLeft="@+id/book_title"
                    android:layout_alignStart="@+id/book_title"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/book_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="@string/book_price"
                    android:layout_below="@+id/book_author"
                    android:layout_toRightOf="@+id/bookPhoto"
                    android:layout_toEndOf="@+id/bookPhoto"
                    android:layout_marginTop="5dp" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_book_info2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="4dp"
            android:layout_below="@+id/card_view_book_info"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/book_info2">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bookPhoto2"
                    android:layout_gravity="center|left"
                    android:src="@drawable/foto_libro2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/bookPhoto2"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentStart="false">

                </LinearLayout>

                <TextView
                    android:id="@+id/book_title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="@string/book_title2"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/bookPhoto2"
                    android:layout_toRightOf="@+id/bookPhoto2" />

                <TextView
                    android:id="@+id/book_author2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="@string/book_author2"
                    android:layout_below="@+id/book_title2"
                    android:layout_alignLeft="@+id/book_title2"
                    android:layout_alignStart="@+id/book_title2"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/book_price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="@string/book_price2"
                    android:layout_below="@+id/book_author2"
                    android:layout_toRightOf="@+id/bookPhoto2"
                    android:layout_toEndOf="@+id/bookPhoto2"
                    android:layout_marginTop="5dp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_book_info3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:layout_below="@+id/card_view_book_info2"
            card_view:cardCornerRadius="4dp"
            android:layout_margin="5dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/book_info3">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bookPhoto3"
                    android:layout_gravity="center|left"
                    android:src="@drawable/foto_libro3"
                    android:layout_below="@+id/linearLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/bookPhoto3"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentStart="false"
                    android:id="@+id/linearLayout">

                </LinearLayout>

                <TextView
                    android:id="@+id/book_title3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="@string/book_title3"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/bookPhoto3"
                    android:layout_toRightOf="@+id/bookPhoto3" />

                <TextView
                    android:id="@+id/book_author3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="@string/book_author3"
                    android:layout_below="@+id/book_title3"
                    android:layout_alignLeft="@+id/book_title3"
                    android:layout_alignStart="@+id/book_title3"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/book_price3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="@string/book_price3"
                    android:layout_below="@+id/book_author3"
                    android:layout_toRightOf="@+id/bookPhoto3"
                    android:layout_toEndOf="@+id/bookPhoto3"
                    android:layout_marginTop="5dp" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <ImageButton
        android:layout_width="@dimen/abc_action_button_min_width_material"
        android:layout_height="@dimen/abc_action_button_min_height_material"
        android:layout_toEndOf="@+id/layout_root_view"
        android:elevation="5dp"
        android:id="@+id/fab_aggiungiAnnuncio"
        android:longClickable="false"
        android:textSize="25dp"
        android:layout_margin="15dp"
        android:background="#4CAF50"
        android:layout_gravity="right|bottom" />

</FrameLayout>