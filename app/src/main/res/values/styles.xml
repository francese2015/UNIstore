<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Holo" parent="android:Theme.Holo.Light">
        <!-- theme customizations -->
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="Theme.BookInfoTheme" parent="Theme.AppCompat.Light">
        <item name="android:layout_margin">5dp</item>

        <item name="android:textColorPrimary">@color/secondary_text</item>

        <item name="colorControlNormal">@color/divider</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
    </style>

    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/primary_material_light</item>
        <item name="android:windowNoTitle">true</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/accent_material_light</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

    </style>

    <style name="ToolBarStyle" parent="">
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
    </style>

    <style name="ParseLoginUI" />

    <style name="ParseLoginUI.Button" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">
            @drawable/com_parse_ui_parse_login_button_background_selector
        </item>
        <item name="android:textColor">@color/com_parse_ui_parse_login_display_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NoLoginUI.Button" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">
            @drawable/no_login_button_background_selector
        </item>
        <item name="android:textColor">@color/com_parse_ui_parse_login_display_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Buy.Button" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">
            @drawable/buy_button_background_selector
        </item>
        <item name="android:textColor">@color/com_parse_ui_parse_login_display_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ParseLoginUI.Button.ThirdPartyLogin" parent="ParseLoginUI.Button">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="ParseLoginUI.HelpButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/com_parse_ui_parse_login_help_button_label_selector</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ParseLoginUI.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/com_parse_ui_parse_login_display_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ParseLoginUI.EditText" parent="@android:style/Widget.EditText">
        <item name="android:singleLine">true</item>
    </style>

    <style name="FrameworkRoot.Theme" parent="Theme.AppCompat.Light" />
    <style name="FrameworkRoot.Widget" parent="Theme.AppCompat" />

    <!-- Immediate parent theme to specify base values for custom attributes -->
    <style name="Theme" parent="FrameworkRoot.Theme">
        <!-- Only needed for pre-L -->
    </style>
    <style name="Theme.Carddemo.Base" parent="Theme">

        <!--<item name="android:actionBarStyle">@style/ActionBar</item>-->
        <item name="homeAsUpIndicator">@drawable/ic_up</item>


        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColorLink">@color/accent</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_up</item>
        <!--
                <item name="android:popupMenuStyle">@style/Widget.Carddemo.PopupMenu</item>
                <item name="android:listPopupWindowStyle">@style/Widget.Carddemo.PopupMenu</item>
                <item name="android:dropDownListViewStyle">@style/Widget.Carddemo.ListView.DropDown</item>
                <item name="android:textAppearanceLargePopupMenu">@style/TextAppearance.LargePopupMenu</item>
        -->
    </style>

    <style name="Theme.Carddemo" parent="Theme.Carddemo.Base" />
    <!-- Text for sections -->
    <style name="Theme.Carddemo.TitleText">
        <item name="android:textSize">@dimen/title_section_textsize</item>
        <item name="android:layout_marginLeft">@dimen/title_section_margin</item>
        <item name="android:layout_marginRight">@dimen/title_section_margin</item>
        <item name="android:layout_marginBottom">@dimen/title_section_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/title_section_margin_top</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="MenuItemRippleStyle" parent="Material.Drawable.Ripple.Wave">
        <item name="rd_rippleColor">#902DA0FF</item>
        <item name="rd_rippleAnimDuration">300</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_cornerRadius">0dp</item>
    </style>

    <style name="RadioButtonDrawable" parent="Material.Drawable.RadioButton"/>

    <style name="FloatingActionButtonIcon" >
        <item name="lmd_state">@xml/fab_icon_states</item>
        <item name="lmd_curState">0</item>
        <item name="lmd_padding">2dp</item>
        <item name="lmd_animDuration">200</item>
        <item name="lmd_interpolator">@android:anim/accelerate_decelerate_interpolator</item>
        <item name="lmd_strokeSize">3dp</item>
        <item name="lmd_strokeColor">#FFFFFFFF</item>
        <item name="lmd_strokeCap">round</item>
        <item name="lmd_strokeJoin">bevel</item>
        <item name="lmd_clockwise">true</item>
    </style>

    <style name="FloatingActionButtonIcon.Light" parent="FloatingActionButtonIcon">
        <item name="lmd_strokeColor">#FF000000</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
        <item name="fab_shadowColor">#444</item>
        <item name="fab_colorNormal">@color/background_floating_material_light</item>
        <item name="fab_colorPressed">#ffffff</item>
        <item name="fab_colorRipple">#eeeeee</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
